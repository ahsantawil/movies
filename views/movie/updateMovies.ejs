<% include ../header %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Update Movies
      </h1>
      <% include ../message %>
      <form action="/movies/update" method="POST">
        <div class="form-group">
          <label for="name">Name Movies</label>
          <input type="hidden" value="<%= movies._id %>" name="id">
          <input type="name" id="name" name="name" value="<%= movies.name %>" class="form-control" placeholder="Enter Name Movies">
        </div>
        <div class="form-group">
          <label for="releasedate">Release Date</label>
          <input type="date" id="date" name="date" value="<%= newDate %>" class="form-control" placeholder="Enter Release Date">
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Update Movies
        </button>
      </form>
    </div>
  </div>
</div>